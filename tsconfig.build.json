{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist/types",
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"noEmit": false,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["react", "react-dom"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["src/main.tsx", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
